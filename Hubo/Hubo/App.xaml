<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hubo.App">
  <Application.Resources>
    <ResourceDictionary>
      <Color x:Key="pageBackgroundColour">Red</Color>
      <Color x:Key="barBackgroundColour">Pink</Color>
      <Color x:Key="entryBackgroundColour">Green</Color>
      <Color x:Key="entryTextColor">White</Color>
      <Style TargetType="NavigationPage">
        <Setter Property="BackgroundColor" Value="{StaticResource pageBackgroundColour}" />
        <Setter Property="BarBackgroundColor" Value="{StaticResource barBackgroundColour}"/>
      </Style>
      <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource entryTextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource entryBackgroundColour}" />
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</Application>