<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hubo.ProfileLicencePage">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="8*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="2*" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="2*" />
    </Grid.RowDefinitions>
    <Entry Text="{Binding LicenseNumber}" x:Name="licenseNumber" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" Placeholder="License Number"/>
    <Entry Text="{Binding LicenseVersion}" x:Name="licenseVersion" Grid.Column="1" Grid.Row="1" VerticalOptions="Center" Placeholder="License Version"/>
    <Entry Text="{Binding Endorsements}" x:Name="endorsements" Grid.Column="1" Grid.Row="2" VerticalOptions="Center" Placeholder="Endorsements"/>
  </Grid>
</ContentPage>