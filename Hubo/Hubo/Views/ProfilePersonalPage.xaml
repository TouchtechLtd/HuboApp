<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hubo.ProfilePersonalPage">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="8*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="2*" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="2*" />
    </Grid.RowDefinitions>
    <Entry Text="{Binding FirstName}" x:Name="firstName" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" Placeholder="First Name"/>
    <Entry Text="{Binding LastName}" x:Name="lastName" Grid.Column="1" Grid.Row="1" VerticalOptions="Center" Placeholder="Last Name"/>
    <Entry Text="{Binding Email}" x:Name="email"  Grid.Column="1" Grid.Row="2" VerticalOptions="Center" Placeholder="Email"/>
    <Entry Text="{Binding Password}" x:Name="password" Grid.Column="1" Grid.Row="3" VerticalOptions="Center" Placeholder="Password"/>
  </Grid>
</ContentPage>