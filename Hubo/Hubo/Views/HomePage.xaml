<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resource="clr-namespace:Hubo;assembly=Hubo"
             xmlns:local="clr-namespace:Hubo;assembly=Hubo"
             xmlns:syncfusion="clr-namespace:Syncfusion.SfGauge.XForms;assembly=Syncfusion.SfGauge.XForms"
             x:Class="Hubo.HomePage">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="4*" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />      
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="6*" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="3*" />
    </Grid.RowDefinitions>
    <Label Text="Placeholder Vehicle" IsVisible="{Binding ShiftStarted}" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" XAlign="Center" YAlign="Center"/>
    <syncfusion:SfCircularGauge Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6">
      <syncfusion:SfCircularGauge.BindingContext>
        <local:HomeViewModel  />
      </syncfusion:SfCircularGauge.BindingContext>
      <syncfusion:SfCircularGauge.Scales>
        <syncfusion:Scale  x:Name="circularScale" StartValue="0" LabelColor="Gray" StartAngle="135" RimThickness="10" MinorTicksPerInterval="1" SweepAngle="270" EndValue="24"  Interval="2" RimColor="Red" LabelOffset="0.2">
          <syncfusion:Scale.MajorTickSettings LabelColor="Black">
            <syncfusion:TickSettings Length="12" Thickness="3" Color="Black" Offset="0.35"/>
          </syncfusion:Scale.MajorTickSettings>
          <syncfusion:Scale.MinorTickSettings LabelColor="Green">
            <syncfusion:TickSettings Length="6" Thickness="3" Color="Green" Offset="0.35"/>
          </syncfusion:Scale.MinorTickSettings>
          <syncfusion:Scale.Pointers>
            <syncfusion:RangePointer x:Name="greenRangePointer" Color="{Binding GreenRangePointer}"  Thickness="10" Value="{Binding RemainderOfJourney}" EnableAnimation="true"/>
            <syncfusion:RangePointer x:Name="blueRangePointer" Color="{Binding BlueRangePointer}"  Thickness="10" Value="{Binding CompletedJourney}" EnableAnimation="true"/>
            <syncfusion:RangePointer x:Name="redRangePointer" Color="{Binding RedRangePointer}" Thickness="10" Value="{Binding Break}" EnableAnimation="true"/>
            <syncfusion:NeedlePointer  Value="{Binding CompletedJourney}" Color="Black" KnobColor="Gray" KnobRadius="15" LengthFactor="0.5" EnableAnimation="true"/>
          </syncfusion:Scale.Pointers>
        </syncfusion:Scale>
      </syncfusion:SfCircularGauge.Scales>
    </syncfusion:SfCircularGauge>
    <Label Text="{Binding TotalBeforeBreakText}" YAlign="Start" XAlign="Center" FontSize="20" TextColor="Black" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="2" />
    <Button Text="{Binding ShiftText}" FontSize="30" BackgroundColor="{Binding ShiftButtonColor}" Command="{Binding ShiftButton}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" IsVisible="{Binding StartShiftVisibility}"/>
    <StackLayout Grid.Row="3" Grid.RowSpan="2"  Grid.Column="0" Grid.ColumnSpan="6"  IsVisible="{Binding ShiftStarted}" >
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="4*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="4*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="4*" />
          <RowDefinition Height="4*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Text="{Binding StartBreakText}" BackgroundColor="{Binding BreakButtonColor}" Command="{Binding StartBreakCommand}" Grid.Row="1" Grid.Column="1" />
        <Button Text="{Binding EndShiftText}" BackgroundColor="{Binding ShiftButtonColor}" Command="{Binding EndShiftCommand}" Grid.Row="1" Grid.Column="3"   />
        <Button Text="{Binding VehicleText}" Command="{Binding VehicleCommand}"  Grid.Row="2" Grid.Column="1"   />
        <Button Text="{Binding AddNoteText}" Command="{Binding AddNoteCommand}" Grid.Row="2" Grid.Column="3"  />
      </Grid>
    </StackLayout>
  </Grid>  
</ContentPage>