<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hubo.ErrorPage"
             Title="ErrorPage">
  <ScrollView>
    <StackLayout Padding="10">
      <Label Text="Error Page" FontSize="40"/>
      <Label Text="Hubo has encountered an error, please send error report with Hockey App"/>
      <Button Text="Click Me" Command="{Binding IncreaseCountCommand}"/>
      <Label Text="{Binding CountDisplay}"/>
    </StackLayout>
  </ScrollView>
</ContentPage>