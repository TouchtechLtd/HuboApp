<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Style="{StaticResource ContentPageStyle}"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hubo.SettingsPage">

    <TableView>
        <TableView.Root>
            <TableSection Title="Layout">
                <SwitchCell x:Name="hamburgerSwitch" Text="Change menu to Hamburger menu." On="{Binding HamburgerSettings}"/>
                <SwitchCell x:Name="darkLightSwitch" Text="Change theme from Light to Dark." On="{Binding DarkLightSetting}"/>

                <TextCell Text="SettingsPage" />
            </TableSection>
        </TableView.Root>
    </TableView>
</ContentPage>