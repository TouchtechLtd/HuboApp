<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Hubo;assembly=Hubo"
             x:Class="Hubo.AddShiftPage">
  <ScrollView>
  <Grid x:Name="grid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width=".3*" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width=".3*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height=".1*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    
    <Label Text="{Binding DateText}" VerticalTextAlignment="Center" Grid.Row="0" Grid.Column="1" />
    <DatePicker Date="{Binding Date}" x:Name="datePicker" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" VerticalOptions="Center"/>
    
    <Label Text="{Binding StartShiftText}" VerticalTextAlignment="Center" Grid.Row="1" Grid.Column="1"/>
    <TimePicker Time="{Binding StartShift}" Grid.Row="1" Grid.Column="2" VerticalOptions="Center"/>
    <Label Text="{Binding DashIcon}" VerticalTextAlignment="Center" XAlign="Center" Grid.Row="1" Grid.Column="3"/>
    <TimePicker Time="{Binding EndShift}" Grid.Row="1" Grid.Column="4" VerticalOptions="Center"/>

    <Label Text="{Binding LocationText}" VerticalTextAlignment="Center" Grid.Row="2" Grid.Column="1"/>
    <local:BaseEntry Text="{Binding LocationStartData}" x:Name="startLocation" Grid.Row="2" Grid.Column="2" VerticalOptions="Center"/>
    <Label Text="{Binding DashIcon}" VerticalTextAlignment="Center" XAlign="Center" Grid.Row="2" Grid.Column="3"/>
    <local:BaseEntry Text="{Binding LocationEndData}" Grid.Row="2"  x:Name="endLocation" Grid.Column="4" VerticalOptions="Center"/>
    
    <Button Text="{Binding AddText}" Command="{Binding AddButton}" x:Name="addButton" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="{Binding ButtonRow}" />
    <Button Text="{Binding SaveText}" Command="{Binding SaveButton}" x:Name="saveButton" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="{Binding ButtonRow}"/>
  </Grid>
  </ScrollView>
</ContentPage>