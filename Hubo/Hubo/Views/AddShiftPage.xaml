<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hubo.AddShiftPage">
  <Grid x:Name="grid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="2*" />
    </Grid.RowDefinitions>
    
    <Label Text="{Binding Date}" YAlign="Center" Grid.Row="1" Grid.Column="1" />
    <DatePicker x:Name="datePicker" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" VerticalOptions="End"/>
    
    <Label Text="{Binding Vehicle}" YAlign="Center" Grid.Row="2" Grid.Column="1"/>
    <Picker x:Name="vehiclePicker" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"/>
    
    <Label Text="{Binding StartShift}" YAlign="Center" Grid.Row="3" Grid.Column="1"/>
    <TimePicker x:Name="startShiftPicker" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"/>
    
    <Label Text="{Binding EndShift}" YAlign="Center" Grid.Row="{Binding EndShiftRow}" Grid.Column="1"/>
    <TimePicker Grid.Row="{Binding EndShiftRow}"  x:Name="endShiftPicker" Grid.Column="2" Grid.ColumnSpan="2"/>
    
    <Label Text="{Binding StartBreak}" YAlign="Center" Grid.Row="4" Grid.Column="1" IsVisible="false" x:Name="startBreakText1"/>
    <TimePicker Grid.Row="4" x:Name="startBreakPicker1" Grid.Column="2" Grid.ColumnSpan="2" IsVisible="false"/>
    
    <Label Text="{Binding EndBreak}" YAlign="Center" Grid.Row="5" Grid.Column="1" IsVisible="false" x:Name="EndBreakText1"/>
    <TimePicker Grid.Row="5" x:Name="endBreakPicker1" Grid.Column="2" Grid.ColumnSpan="2" IsVisible="false"/>
    
    <Label Text="{Binding StartBreak}" YAlign="Center" Grid.Row="6" Grid.Column="1" IsVisible="false" x:Name="startBreakText2"/>
    <TimePicker Grid.Row="6" x:Name="startBreakPicker2" Grid.Column="2" Grid.ColumnSpan="2" IsVisible="false"/>
    
    <Label Text="{Binding EndBreak}" YAlign="Center" Grid.Row="7" Grid.Column="1" IsVisible="false" x:Name="endBreakText2"/>
    <TimePicker Grid.Row="7" x:Name="endBreakPicker2" Grid.Column="2" Grid.ColumnSpan="2" IsVisible="false"/>
    
    <Button Text="{Binding AddBreakText}" Command="{Binding AddBreakButton}" x:Name="addBreakButton" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="9" />
    <Button Text="{Binding SaveText}" x:Name="saveButton" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="9"/>
  </Grid>
</ContentPage>